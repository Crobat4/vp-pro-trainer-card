{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"baseUrl": ".",

		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"paths": {
			"react": ["./node_modules/preact/compat/"],
			"react-dom": ["./node_modules/preact/compat/"],
			"src/*" : ["src/*"],
			"components/*": [ "./src/components/*" ],
			"components": [ "./src/components" ],
			"assets/*": [ "./src/assets/*" ],
			//"Assets": [ "./src/assets" ]
			"modules/*": [ "./src/modules/*" ],
			"styles/*": [ "./src/styles/*" ],
		}
	},
	"include": [
		"node_modules/vite/client.d.ts", "**/*",
		"src"
	]
}
